        <Button Content="试试登录！" HorizontalAlignment="Left" Margin="320,95,0,0" VerticalAlignment="Top" Width="147" Click="Button_Click" Height="52" FontSize="24"/>
        <TextBox x:Name="T0" HorizontalAlignment="Left" Height="44" Margin="101,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="147" TextChanged="TextBox_TextChanged"/>
        <PasswordBox x:Name="P0" HorizontalAlignment="Left" Margin="101,175,0,0" VerticalAlignment="Top" Width="147" Height="48"/>
        <Button Content="我要设置！" HorizontalAlignment="Left" Height="32" Margin="320,25,0,0" VerticalAlignment="Top" Width="147" FontSize="18" Click="Button_Click_1"/>
