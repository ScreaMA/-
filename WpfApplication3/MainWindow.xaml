        <Label Content="v1.1 Myc" HorizontalAlignment="Left" Height="35" Margin="390,276,0,0" VerticalAlignment="Top" Width="118"/>
        <Button Content="一键生成登录脚本" HorizontalAlignment="Left" Margin="310,175,0,0" VerticalAlignment="Top" Width="173" Height="48" FontSize="18" Click="Button_Click_2"/>
        <Label Content="帐号" HorizontalAlignment="Left" Height="34" Margin="33,108,0,0" VerticalAlignment="Top" Width="68" FontFamily="Hiragino Sans GB W3" FontSize="20"/>
